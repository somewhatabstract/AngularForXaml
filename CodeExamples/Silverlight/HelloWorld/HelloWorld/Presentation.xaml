<UserControl x:Class="HelloWorld.Presentation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helloWorld="clr-namespace:HelloWorld"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <helloWorld:NotConverter x:Name="NotConverter" />
        <helloWorld:ErrorColorConverter x:Name="ErrorColorConverter" />
        <helloWorld:VisibilityConverter x:Name="VisibilityConverter" />
    </UserControl.Resources>

    <StackPanel x:Name="LayoutRoot" Background="White" Width="Auto">
        <CheckBox FontSize="24" IsChecked="{Binding IsShowingSurprise, Mode=TwoWay}">Show</CheckBox>
        <TextBlock Text="SURPRISE!" FontSize="24"
            Visibility="{Binding IsShowingSurprise, Converter={StaticResource VisibilityConverter}}" />

        <RadioButton IsChecked="{Binding IsError, Mode=TwoWay}">Has Errors</RadioButton>
        <RadioButton IsChecked="{Binding IsError, Mode=TwoWay, Converter={StaticResource NotConverter}}">No Errors</RadioButton>
        <TextBlock Text="Some status message" FontSize="24" Foreground="{Binding IsError, Converter={StaticResource ErrorColorConverter}}" />
    </StackPanel>
</UserControl>
